---
import LibraryIcons from '@/icons/Library.astro'
import HomeIcons from '@/icons/Home.astro'
import SearchIcons from '@/icons/Search.astro'
import SideMenuItem from '@/components/SideMenuItem.astro';
import SideMenuCard from '@/components/SideMenuCard.astro';

import { playlists } from '@/lib/data'
---

<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-zinc-900 rounded-lg p-2">
        <ul>
            <SideMenuItem href='/'>
                <HomeIcons/>
                Home
            </SideMenuItem>
            <SideMenuItem href='/#'>
                <SearchIcons/>
                Search
            </SearchIcons>
        </ul>
    </div>

    <div class="bg-zinc-900 rounded-lg p-2 flex-1">
        <ul>
            <SideMenuItem href='/'>
                <LibraryIcons/>
                Library
            </SideMenuItem>           
            {
                playlists.map(playlist => <SideMenuCard playlist = { playlist}/>)
            }
        </ul>
        
    </div>
</nav>

